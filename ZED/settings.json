{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-latest"
    },
    "version": "2"
  },
  "ui_font_size": 13,
  "buffer_font_size": 14,
  "buffer_font_weight": 300,
  "ui_font_family": "Zed Plex Mono",
  "buffer_font_family": "Zed Plex Mono", //Zed Plex Mono",
  "terminal": {
    "font_family": "JetBrainsMonoNL Nerd Font",
    "blinking": "on"
  },

  "cursor_blink": false, // Desativado o cursor blink
  "ui_font_fallbacks": ["JetBrainsMonoNL Nerd Font", "MonoLisa"],

  "scrollbar": {
    "show": "never"
  },
  "ui_font_features": {
    "cv01": true,
    "font_ligatures": true,
    "calt": true
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": true
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true,
    "activate_on_close": "history",
    "always_show_close_button": false
  },

  "toolbar": {
    "breadcrumbs": true,
    "quick_actions": true
  },

  "git": {
    "git_gutter": "tracked_files",
    "gutter_debounce": 1,
    "inline_blame": null
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Nord"
  },

  "smooth_scroll_duration": 50, // Animação mais rápida para scroll
  "keyboard": {
    "key_repeat_delay": 200, // Diminui o delay inicial da digitação
    "key_repeat_rate": 25 // Aumenta a taxa de repetição de teclas
  },

  "languages": {
    "TypeScript": {
      "code_actions_on_format": {
        "source.organizeImports": true
      },
      "inlay_hints": {
        "enabled": true,
        "show_parameter_hints": false,
        "show_other_hints": true,
        "show_type_hints": true
      }
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    }
  },

  "indent_guides": {
    "enabled": false // Desativado indent guides
  }
}
